//!compile. execute with input "". expect output equals "true". endl.

(class A()
	obj x : Bool := false
	obj y : Int32 := 10
	public proc output(in outArg : Bool)
	
	(thread
		y := -y
		(if y < 0 then
			x := true
		if)
		output(x)
	thread)
	
	(thread
		(accept
			output(in outArg : Bool)
		accept)
	thread)
class)

obj a : A := new A()