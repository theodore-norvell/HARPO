//		- A simple while statement

(class A()
	obj a1 : Int32 := 0
	public proc whtest()
	public proc output(in outArg : Int32)
	(thread
		(accept
			whtest()
				(while a1 < 5 do
					a1 := a1 + 1
				while)
				output(a1)
		accept)
	thread)
	(thread
		(accept
			output(in outArg : Int32)
		accept)
	thread)
	(thread
		whtest()
	thread)
class A)

